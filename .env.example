# Database
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/combatid?schema=public"

# Auth0
AUTH0_DOMAIN=your-tenant.auth0.com
AUTH0_CLIENT_ID=your-client-id
AUTH0_CLIENT_SECRET=your-client-secret
AUTH0_AUDIENCE=https://api.combatid.com

# JWT (for local auth fallback)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=7d

# AWS
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-west-2
AWS_S3_BUCKET=combatid-documents

# OpenAI (for AI service)
OPENAI_API_KEY=your-openai-key

# Stripe (for identity verification and payments)
STRIPE_SECRET_KEY=sk_test_your-key
STRIPE_PUBLISHABLE_KEY=pk_test_your-key
STRIPE_WEBHOOK_SECRET=whsec_your-secret

# Services
API_URL=http://localhost:3001
AI_SERVICE_URL=http://localhost:8000
WEB_URL=http://localhost:3000

# CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:8081
