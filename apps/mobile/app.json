{
  "expo": {
    "name": "CombatID",
    "slug": "combatid",
    "version": "0.1.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "scheme": "combatid",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#2563EB"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.combatid.app",
      "infoPlist": {
        "NSCameraUsageDescription": "CombatID needs camera access to scan documents and verify your identity.",
        "NSPhotoLibraryUsageDescription": "CombatID needs photo library access to upload documents."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#2563EB"
      },
      "package": "com.combatid.app",
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      [
        "expo-camera",
        {
          "cameraPermission": "Allow CombatID to access your camera for document scanning and identity verification."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow CombatID to access your photos to upload documents."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
