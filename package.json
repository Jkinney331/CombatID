{
  "name": "combatid",
  "version": "0.1.0",
  "private": true,
  "description": "CombatID - Digital identity and compliance platform for combat sports",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "clean": "turbo clean",
    "mobile": "cd apps/mobile && npm start",
    "web": "cd apps/web && npm run dev",
    "api": "cd apps/api && npm run start:dev",
    "ai": "cd apps/ai-service && uvicorn main:app --reload",
    "db:generate": "cd packages/database && npx prisma generate",
    "db:migrate": "cd packages/database && npx prisma migrate dev",
    "db:push": "cd packages/database && npx prisma db push",
    "db:studio": "cd packages/database && npx prisma studio"
  },
  "devDependencies": {
    "turbo": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "npm@10.0.0"
}
